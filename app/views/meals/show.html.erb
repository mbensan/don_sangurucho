<p style="color: green"><%= notice %></p>

<%= render @meal %>

<div>
  <%= link_to "Edit this meal", edit_meal_path(@meal) %> |
  <%= link_to "Back to meals", meals_path %>

  <%= button_to "Destroy this meal", @meal, method: :delete %>

  <div class="mt-3">
      <h4>Eliminar productos del combo</h4>
      <%=  form_with url: '/courses/remove_student', method: :post do |f| %>
       <input type="hidden" name="meal_id" value="<%=@meal.id%>">
        <select name="student_id" class="form-control"required>
          <% @products_in.each do |pi| %>
            <option value="<%=pi.id%>"><%=pi.name%></option>
          <%end%>
        </select>
        <div class="mt-2">
          <input type="submit" value="Eliminar" class="btn btn-danger">
        </div>
      <% end %>
    </div>
    
    <div class="mt-3">
      <h4>Agregar Productos al combo</h4>
      <%=  form_with url: '/courses/add_student', method: :post do |f| %>
        <input type="hidden" name="meal_id" value="<%=@meal.id%>">
        <select name="student_id" class="form-control"required>
          <% @products_out.each do |st| %>
            <option value="<%=st.id%>"><%=st.name%></option>
          <%end%>
        </select>
        <div class="mt-2">
          <input type="submit" value="Agregar" class="btn btn-success">
        </div>
      <% end %>
    </div>
</div>
